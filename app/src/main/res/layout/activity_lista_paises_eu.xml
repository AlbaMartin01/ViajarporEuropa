<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaPaisesEU">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/fondo_de_pantalla_blanco_minimalista">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿"
                android:textSize="55dp"
                android:textColor="#4D5656"
                android:textStyle="bold"
                android:layout_marginRight="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="?"
                android:textSize="55dp"
                android:textColor="#626567"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Qué ciudad quieres visitar"
            android:textAlignment="center"
            android:textColor="#424949"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>

        <Spinner
            android:id="@+id/SpinnerPaises"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:spinnerMode="dialog" />

        <Button
            android:layout_width="175dp"
            android:layout_height="55dp"
            android:text="Aceptar"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@drawable/shape"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>